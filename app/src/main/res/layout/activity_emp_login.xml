<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    tools:context=".emp.EmpLoginActivity" android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/emp_login_user_text"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@drawable/input_item"
            android:hint="Username"
            android:paddingHorizontal="5dp"
            />
        <EditText
            android:id="@+id/emp_login_pass_text"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@drawable/input_item"
            android:hint="Password"
            android:password="true"
            android:layout_marginTop="15dp"
            android:paddingHorizontal="5dp"
            />
        <Button
            android:id="@+id/emp_login_btn"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_item"
            android:text="LOGIN"
            android:layout_marginHorizontal="15dp"/>
        <TextView
            android:id="@+id/man_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I'm Manager"
            android:gravity="right"
            android:layout_margin="20dp"/>
    </LinearLayout>



</RelativeLayout>