<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingHorizontal="15dp"
        android:weightSum="10">

        <TextView
            android:id="@+id/emp_item_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="1"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emp_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="5"
            android:text="Last message here"
            android:textSize="18dp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:weightSum="2">

            <Button
                android:id="@+id/emp_item_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/baseline_edit_24" />

            <Button
                android:id="@+id/emp_item_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/baseline_delete_24" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/emp_item_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:visibility="gone"
        >
        <EditText
            android:id="@+id/emp_item_new_pass"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@drawable/input_item"
            android:hint="New Password"

            android:layout_marginTop="15dp"
            android:paddingHorizontal="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            >
            <Button
                android:id="@+id/emp_item_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button_item"
                android:text="Cancel" />
            <Button
                android:id="@+id/emp_item_submit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button_item"
                android:text="Submit" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>