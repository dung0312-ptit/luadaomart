<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:weightSum="15">

        <TextView
            android:id="@+id/good_item_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="1"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/goode_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="6"
            android:text="Last message here"
            android:textSize="18dp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/goode_item_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:text="30000"
            android:textSize="18dp"
            android:gravity="center"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/goode_item_quan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="2"
            android:textSize="18dp"
            android:textStyle="normal"
            android:gravity="center"/>

        <LinearLayout
            android:id="@+id/good_item_config_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:weightSum="2"
            android:layout_marginLeft="10dp">


            <Button
                android:id="@+id/good_item_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/baseline_add_24" />

            <Button
                android:id="@+id/good_item_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/baseline_delete_24" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/good_item_edit_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:paddingHorizontal="15dp"
        android:visibility="gone"
        android:weightSum="10">

        <EditText
            android:id="@+id/good_item_amount"
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_marginTop="15dp"
            android:layout_weight="6"
            android:background="@drawable/input_item"
            android:hint="Add amount"
            android:inputType="number"
            android:paddingHorizontal="5dp" />

        <Button
            android:id="@+id/good_item_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="2"
            android:background="@drawable/button_item"
            android:text="Cancel" />

        <Button
            android:id="@+id/good_item_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"

            android:layout_weight="2"
            android:background="@drawable/submit_button_item"
            android:text="Submit" />


    </LinearLayout>


</LinearLayout>